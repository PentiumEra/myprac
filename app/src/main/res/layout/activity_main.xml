<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    tools:context=".MainActivity">
    <android.support.constraint.Guideline
        android:id="@+id/gl_hori_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"/>
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_percent="0.75"
        android:id="@+id/gl_vertical_8"
        />
   
    <SurfaceView
       android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/gl_hori_1"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/iv_bggg"
        android:visibility="invisible"
        android:src="@drawable/bgggg"/>

    <android.support.constraint.Guideline
        android:id="@+id/gl_hori_41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.41" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_hori_59"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.59" />

    <ImageView
        android:id="@+id/surface_switch_iv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/close"
        app:layout_constraintLeft_toLeftOf="@id/gl_hori_41"
        app:layout_constraintRight_toRightOf="@id/gl_hori_59"
        app:layout_constraintTop_toBottomOf="@id/gl_vertical_8" />




</android.support.constraint.ConstraintLayout>